pipeline {
    agent any

    environment {
        AWS_DEFAULT_REGION = 'ap-south-1'
        S3_BUCKET_NAME = 'jenkins-pipeline-statetf'
    }

    stages {
        stage ('Init') {
            steps {
              dir(' ./../terraformdir/') {
                script {
                    withCredentials([
                        string(credentialsId: 'your-aws-credentials-id', variable: 'AWS_ACCESS_KEY_ID'),
                        string(credentialsId: 'your-aws-credentials-id', variable: 'AWS_SECRET_ACCESS_KEY') ]) {
                        sh '''terraform init  \
                            -backend-config="bucket=jenkins-aws-lambdafunction" \
                            -backend-config="region=ap-south-1" \
                            -backend-config="key=tffiles.tfstate"'''
                    }
                }
              }
            }
        }

        stage ('Plan') {
            steps {
              dir(' ./../terraformdir/') {
                    echo 'Terraform Plan in progress'
                    sh 'terraform plan'
              }   
            }

        }

        stage ('Apply and deploy') {
            steps {
                dir(' ./../terraformdir') {
                    echo 'Terraform Apply in progress'
                    sh 'terraform apply -auto-approve'
                }
            }
        }
    }
}
